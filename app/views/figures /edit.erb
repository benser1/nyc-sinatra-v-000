<h1>Edit Figure</h1>

<form method="POST" action="/figures/<%= @figure.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label for="figure_name">Figure Name</label>
  <input type="text" name="figure[name]" id="figure_name"> 

  <label>Titles</label>
   <% Title.all.uniq.each do |title| %>
   <%= @title.name %>
    <input id="title_<%=title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
  <% end %>

  <label>Landmarks</label>
  <% Landmark.all.uniq.each do |landmark| %>
    <%=landmark.name %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%= landmark.id %>">
  <% end %>

  <h2>Or Create New Figure:</h2>

  <label for='new_title'>New Title</label>
  <input type='text' name='figure[title]' id='new_title'>

  <label for='new_landmark'>New Landmark</label>
  <input type='text' name='figure[landmark]' id='new_landmark'>

  <input type='submit' value='Edit Figure'>

</form>